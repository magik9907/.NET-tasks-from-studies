@page
@model net_task.Pages.LastSearch.IndexModel

@{
    ViewData["Title"] = "Last Search";
}

<h1>Last search</h1>

<p>
    <a asp-page="/Index">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Index
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].State)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (var item in Model.FizzBuzz)
        {
            <tr>

                <td>
                    @(Model.FizzBuzz.IndexOf(item)+1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @item.GetMessage()
                </td>
                <td>
                    |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
